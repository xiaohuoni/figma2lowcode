{
  "compilerOptions": {
    "target": "ES2017",
    "outDir": "dist",
    "lib": ["ES2017", "DOM"],
    "jsx": "react",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"]
  }
}
